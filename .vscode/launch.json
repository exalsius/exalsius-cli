{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "subProcess": true,
            "redirectOutput": true
        },
        {
            "name": "Python Debugger: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": [
                "tests/unit"
            ],
            "justMyCode": true,
            "subProcess": true,
            "redirectOutput": true
        }
    ]
}